<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <filter>
    <filter-name>CorsFilter</filter-name>
    <filter-class>top.qwebnm.api.CORSFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CorsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>api</servlet-name>
    <servlet-class>top.qwebnm.api.getUserData</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getUserTasks</servlet-name>
    <servlet-class>top.qwebnm.api.getUserTasks</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>deleteTask</servlet-name>
    <servlet-class>top.qwebnm.api.deleteTask</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>api</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getUserTasks</servlet-name>
    <url-pattern>/tasks</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>deleteTask</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>

</web-app>
